<h1>New question</h1>

<%= form_for :question, url: questions_path do |f| %>
  <p>
    <%= f.label :qid %><br>
    <%= f.text_field :qid %>
  </p>
 
  <p>
    <%= f.label :reward %><br>
    <%= f.text_field :reward %>
  </p>
<p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label 'A' %><br>
    <%= f.text_field :ans1 %>
  </p>
  <p>
    <%= f.label 'B' %><br>
    <%= f.text_field :ans2 %>
  </p>
  <p>
    <%= f.label 'C' %><br>
    <%= f.text_field :ans3%>
  </p>
<p>
    <%= f.label 'D' %><br>
    <%= f.text_field :ans4 %>
  </p>
  <p>
  <%= f.label 'Answer' %><br>
      <%= f.select :answer, [['A','a'],['B','b'],['C','c'],['D','d']] %>
  </p>



  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', questions_path %>