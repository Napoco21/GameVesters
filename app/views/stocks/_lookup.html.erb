<div id="stock-lookup">
  <h3>Search for Stocks</h3>
  <%= form_tag search_stocks_path, remote: true, method: :get, id: 'stock-lookup-form' do %>
  <div class="form-group row no-padding text-center col-md-12">
    <div class="col-md-10">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock symbol symbol", autofocus: true,
                                                class: 'form-control search-box input-lg' %>
      
    </div>
    <div class="col-md-2">
      <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
        <i class="fa fa-search"></i> Look up a stock
      <% end %>

    </div>
  </div>
  <% end %>
  <%= render 'common/spinner'%>
  <% if resource %>
    <div id="stock-lookup-results" class="well results-block">
      
      <strong>Symbol: </strong><%= resource.symbol %>
      <strong>Name: </strong><%= resource.name %>
      <strong>Price: </strong><%= resource.current_price %>
      <% if current_user.can_add_stock?(resource.symbol) %>
        <%= link_to "Add to my Stocks", user_stocks_path(user: current_user, stock_symbol: resource.symbol, stock_id: resource.id ? resource.id : ''), class: 'btn btn-xs btn-success', method: :post %>
      <% else %>
        <!-- chec why user can or cannot add-->
        <span class="label label-default">
          Stock cannot be added because you ahve already added
          <% if !current_user.under_stock_limit? %>
          10 stocks
          <% end %>
          <% if current_user.stock_already_added?(resource.symbol) %>
          this stock
          <% end %>
        </span>
      <% end %>
    </div>
  <% end %>
  <div id="stock-lookup-errors">  </div>
</div>