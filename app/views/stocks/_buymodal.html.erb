<div id="transaction-modal" class="modal fade" role="dialog">
	<div class="modal dialog">
		<div class="modal-content">
			<div class="modal-header">
					<button type="button" class="btn btn-default" data-dismiss="modal">&times;
					</button>
					<h4 class="modal-title">Buy</h4>
				</div>
			<%= form_for(transaction) remote: true, method: "post", id: 'stock-buy-form' do |f|%>
				<div class="form-group row no-padding text-center col-md-12">
					<div class="col-md-10">
					<p><%= "#{@stock.symbol} current price: #{@stock.current_price}"%></p>
				  	<%= f.number_field_tag :quantity, params[:quantity], placeholder: "Quantity", autofocus: true,
					class: 'form-control' %>
				  
					</div>
				<div class="col-md-2">
			  
			 	<%= button_tag(type: :submit, class: "btn btn-success") do %>
				Buy
				<% end %>
				</div>
				</div>
			<% end %>
		</div>
	</div>

</div>