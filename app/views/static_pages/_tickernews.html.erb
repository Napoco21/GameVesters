<h1>Trending Tickers</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
			<th>Change</th>
			<th>% Change</th>
    </tr>
  </thead>
  <tbody>
    <% @stock_for_user.each do |stock| %>
    <tr>
      <td><%= stock[0].name %></td>
      <td><%= stock[0].symbol %></td>
      <td><%= stock[0].current_price %></td>
			<td><%= stock[0].amount_change %></td>
			<td><%= stock[0].percent_change %></td>

    </tr>
    <% end %>

  </tbody>
</table>


  <h1>Latest News</h1>
	<table class="table table-striped">
  <thead>
		<tr>
			<th> Article Name</th>
			<th> Publish date</th>
			</tr>
		</thead>
		<tbody>
  		<% @feed.each do |entry| %>
			<tr>
		    <td><%= link_to h(entry.name), entry.url, :target => "_blank" %></td>
				<td><%= entry.published_at.to_formatted_s(:long_ordinal)  %></td>
			</tr>
  		<% end %>
		</tbody>
	</table>
