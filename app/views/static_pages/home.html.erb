<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
	  		<section class="user_info">
	    		<%= render 'shared/user_info' %>
	  		</section>
	  		<section class="stats">
	    		<%= render 'shared/stats' %>
	  		</section>

		</aside>

	</div>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Symbol</th>
	      <th>Current Price</th>
	      <% if @user.id == current_user.id %>
	        <th>Actions</th>
	      <% end %>
	    </tr>
	  </thead>
	  <tbody>
	    <% @user_stocks.each do |user_stock| %>
	    <tr>
	      <td><%= user_stock.name %></td>
	      <td><%= user_stock.symbol %></td>
	      <td><%= user_stock.current_price %></td>
	      <% if @user.id == current_user.id %>
	      <td>
	        <%= link_to 'Un-track', user_stock_path(user_stock), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
	        <!--## will only delte association-->
	      </td>
	      <% end %>
	    </tr>
	    <% end %>

	  </tbody>
	</table>
<% else %>

	<%= render 'jumbotron' %>
	<!--<%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>-->
<% end %>
<h2>Trending Tickers</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
			<th>Change</th>
			<th>% Change</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.name %></td>
      <td><%= stock.symbol %></td>
      <td><%= stock.last_trade_price_only %></td>
			<td><%= stock.change %></td>
			<td><%= stock.percent_change %></td>

    </tr>
    <% end %>

  </tbody>
</table>
